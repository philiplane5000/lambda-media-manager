{
    "useTabs": false,
    "tabWidth": 4,
    "endOfLine": "lf",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "embeddedLanguageFormatting": "auto",
    "htmlWhitespaceSensitivity": "css",
    "proseWrap": "preserve",
    "jsxSingleQuote": true,
    "bracketSameLine": false,
    "singleAttributePerLine": false,
    "insertPragma": false,
    "requirePragma": false,
    "overrides": [
        {
            "files": ["*.yaml", "*.yml", "*.css", "*.scss"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
